{
  "name": "dc-cli",
  "version": "0.1.45",
  "description": "Command line interface for DC protocol",
  "author": "Dao Casino",
  "private": true,
  "preferGlobal": true,
  "license": "GPL-3.0",
  "homepage": "developers.dao.casino",
  "repository": {
    "type": "git",
    "url": "https://github.com/DaoCasino/dc-cli"
  },
  "bugs": {
    "url": "https://github.com/DaoCasino/dc-cli/issues",
    "email": "ilya.dev@dao.casino"
  },
  "engines": {
    "node": ">=6.0.0"
  },
  "bin": {
    "dc-cli": "bin/CLI"
  },
  "keywards": [
    "dc",
    "cli",
    "dc-cli",
    "dcdapp",
    "dao-casino"
  ],
  "husky": {
    "hooks": {
      "pre-push": "npm run lint"
    }
  },
  "scripts": {
    "check_update": "ncu bankroller-core dc-protocol dc-messaging -a",
    "publish:npm": "npm run check_update; npm publish --access=public",
    "lint": "eslint ./lib ./bin",
    "build:ts": "npm-run-all typescript",
    "build": "npm-run-all typescript",
    "clean": "rimraf lib",
    "typescript": "tsc --build",
    "test": "mocha --timeout 99999999 -r ts-node/register src/__tests__/*.test.ts",
    "logs:pm2:testrpc": "pm2 logs dc-protocol --lines=100",
    "logs:pm2:bankroller": "pm2 logs bankroller-node --lines=100",
    "logs:docker:testrpc": "",
    "logs:docker:bankroller": ""
  },
  "dependencies": {
    "bankroller-node": "^0.1.45",
    "chalk": "^2.4.1",
    "commander": "^2.19.0",
    "dc-logging": "^0.1.45",
    "dc-messaging": "^0.1.45",
    "dc-protocol": "^0.1.45",
    "download": "^7.1.0",
    "inquirer": "^6.0.0",
    "ncp": "^2.0.0",
    "node-machine-id": "^1.1.10",
    "pm2": "^3.0.3",
    "update-check": "^1.5.2"
  },
  "devDependencies": {
    "@types/mocha": "^5.2.5",
    "ts-node": "^7.0.1",
    "cross-env": "^5.2.0",
    "chai": "^4.2.0",
    "mocha": "^5.2.0",
    "eslint": "^4.16.0",
    "eslint-config-standard": "^11.0.0-beta.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-node": "^5.2.1",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-standard": "^3.0.1",
    "husky": "^1.0.0-rc.13",
    "npm-check-updates": "^2.14.2"
  },
  "gitHead": "33f46704e19499a4dafe61e7b11697c5adcf3b71"
}
